<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<section id="feeds-section">

    <div style="text-align: center;">
        <h1>
            Welcome to the Codial
        </h1>
    </div>
    
    <div id="posts-container">
        <form action="/posts/create" method="post" id="new-post-form">
            <textarea name="content" id="new-post-content" cols="30" rows="10" placeholder="Type here..." required></textarea>
            <input type="submit" value="Post">
        </form>

        <ul class="list-group list-group-flush mx-auto" style="width: 500px;">
            <%- include('_posts.ejs') -%>
        </ul>
        
    </div>

</section>

<section id="friends-users-section">

    <div class="flex-container"></div>

    <div class="card mx-auto text-center " style="width: 30rem;" id="firends-card">
        <div >
            <ul class="list-group card-body">
                <h5 class="card-title">Your Friends: </h5>
                <% for(let friend of friends.friendships){%>
                    <li class="list-group-item list-group-item-action">
                        <% if(friend.from_user.id == locals.user.id){%>
                            <a href="/user/profile/<%= friend.to_user._id %>" class="card-link"> <%= friend.to_user.name %> </a>
                        <%}else{%>
                            <a href="/user/profile/<%= friend.from_user._id %>" class="card-link"> <%= friend.from_user.name %> </a>
                        <%} %>
                    </li>
                <%} %>  
            </ul>
        </div>
        
    </div>
    
    
    <div class="card mx-auto text-center " style="width: 30rem;" id="all-users-card">
        <div >
            <ul class="list-group card-body">
                <h5 class="card-title">All Users: </h5>
                <% for(let user of users){%>
                    <li class="list-group-item list-group-item-action">
                        <a href="/user/profile/<%= user._id %>" class="card-link"> <%= user.name %> </a>
                        
                    </li>
                <%} %>  
            </ul>
        </div>
        
    </div>
        
    
</section>

<script type="text/javascript" src="/js/home_posts.js"></script>
<script type="text/javascript" src="/js/home_post_comments.js"></script>
<script type="text/javascript" src="/js/toggle_likes.js"></script>
