<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<div style="text-align: center;">
    <h1>
        Welcome to the Codial
    </h1>
</div>


<% for(let post of posts){%>
        
    <div class="card text-bg-light mb-3 mx-auto" style="max-width: 500px;">
        <div class="card-header">
            <h5 class="card-title"> <%= post.user.name %> posted: </h5>
        </div>
        <div class="card-body">
            <p class="card-text"> <%= post.content %> </p>
            <% if(locals.user && locals.user.id == post.user.id) { %>           
                <a href="/posts/delete/<%= post.id %>" class="card-link"> Delete Post </a>  
            <% } %>   
        </div>
        <div class="card-footer">
            <form action="/comments/create/?id='<%= post._id %>' " method="post">
                <input type="text" name="content" placeholder="Add comments...">
                <input type="text" name="post" value="<%= post._id %>" hidden>
                <input type="submit" value="Comment">
            </form>
        </div>
        <ul class="list-group list-group-flush">

            <% for(let comment of post.comments){%>
            
                <li class="list-group-item">
                    <p class="card-text"> <%= comment.content %> </p>
                    <p class="card-text text-muted" style="display: inline;"> <%= comment.user.name %> </p>
                    <% if(locals.user && (locals.user.id == comment.user.id || locals.user.id == post.user.id)) { %>
                        <a href="/comments/delete/<%= comment.id%> " class="card-link"> Delete Comment </a>
                    <%}%>
                </li>

            <%} %>

        </ul>
  </div>

    <%} %>



<form action="/posts/create" method="post" id="new-post-form">
    <textarea name="content" id="new-post-content" cols="30" rows="10" placeholder="Type here..." required></textarea>
    <input type="submit" value="Post">
</form>
